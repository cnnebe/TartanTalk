<% if emergency %>
  <h1> title </h1>
  <%= render partial:"chatrooms/chatroomindex", locals: {chatcollection: active_chat_collection, emergency: emergency, staff: staff} %>

<% elsif current_user.role == "student" %>
<div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
  <div class="panel panel-default">
    <div class="panel-heading" role="tab" id="headingOne">
      <h4 class="panel-title">
        <a class="collapsed" role="button" data-toggle="collapse" data-parent="#accordion" href="#anon" aria-expanded="true" aria-controls="collapseOne">
          Anonymous Chatrooms
        </a>
      </h4>
    </div>
    <div id="anon" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingOne">
      <div class="panel-body">
       <%= render partial:"chatrooms/chatroomindex", locals: {chatcollection: active_anon_collection, emergency: emergency, staff: staff} %>
      </div>
    </div>
  </div>
  <div class="panel panel-default">
    <div class="panel-heading" role="tab" id="headingTwo">
      <h4 class="panel-title">
        <a class="collapsed" role="button" data-toggle="collapse" data-parent="#accordion" href="#nonanon" aria-expanded="true" aria-controls="collapseTwo">
          Non-Anonymous Chatrooms
        </a>
      </h4>
    </div>
    <div id="nonanon" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingTwo">
      <div class="panel-body">
      <%= render partial:"chatrooms/chatroomindex", locals: {chatcollection: active_non_anon_collection, emergency: emergency, staff: staff} %>
      </div>
    </div>
  </div>

<% elsif current_user.role == "peer" %>
  <div class="panel panel-default">
    <div class="panel-heading" role="tab" id="headingThree">
      <h4 class="panel-title">
        <a class="collapsed" role="button" data-toggle="collapse" data-parent="#accordion" href="#peer" aria-expanded="true" aria-controls="collapseThree">
          Active Chatrooms
        </a>
      </h4>
    </div>
    <div id="peer" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingThree">
      <div class="panel-body">
      <%= render partial:"chatrooms/chatroomindex", locals: {chatcollection: active_chat_collection, emergency: emergency, staff: staff} %>
      </div>
    </div>
  </div>

<% elsif current_user.role == "professional" %>
  <div class="panel panel-default">
    <div class="panel-heading" role="tab" id="headingFour">
      <h4 class="panel-title">
        <a class="collapsed" role="button" data-toggle="collapse" data-parent="#accordion" href="#professional" aria-expanded="true" aria-controls="collapseFour">
          Active title
        </a>
      </h4>
    </div>
    <div id="professional" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingFour">
      <div class="panel-body">
      <%= render partial:"chatrooms/chatroomindex", locals: {chatcollection: active_chat_collection, emergency: emergency, staff: staff} %>
      </div>
    </div>
  </div>

<% elsif current_user.role == "admin" %>
  <div class="panel panel-default">
    <div class="panel-heading" role="tab" id="headingFive">
      <h4 class="panel-title">
        <a class="collapsed" role="button" data-toggle="collapse" data-parent="#accordion" href="#admin" aria-expanded="true" aria-controls="collapseFive">
          Active title
        </a>
      </h4>
    </div>
    <div id="admin" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingFive">
      <div class="panel-body">
      <%= render partial:"chatrooms/chatroomindex", locals: {chatcollection: active_chat_collection, emergency: emergency, staff: staff} %>
      </div>
    </div>
  </div>

<% elsif staff %>
  <div class="panel panel-default">
    <div class="panel-heading" role="tab" id="headingSix">
      <h4 class="panel-title">
        <a class="collapsed" role="button" data-toggle="collapse" data-parent="#accordion" href="#staff" aria-expanded="false" aria-controls="collapseSix">
          Active title
        </a>
      </h4>
    </div>
    <div id="staff" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingSix">
      <div class="panel-body">
      <%= render partial:"chatrooms/chatroomindex", locals: {chatcollection: active_chat_collection, emergency: emergency, staff: staff} %>
      </div>
    </div>
  </div>
<% end %> <!-- All tabs except emergency have an archive section -->

<% if !emergency %>
  <div class="panel panel-default">
    <div class="panel-heading" role="tab" id="headingSeven">
      <h4 class="panel-title">
        <a class="collapsed" role="button" data-toggle="collapse" data-parent="#accordion" href="#archive" aria-expanded="false" aria-controls="collapseSeven">
          Archived title
      </h4>
    </div>
    <div id="archive" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingSeven">
      <div class="panel-body">
      <%= render partial:"chatrooms/chatroomindex", locals: {chatcollection: inactive_chat_collection, emergency: emergency, staff: staff} %>
      </div>
    </div>
  </div>
<% end %>
</div>