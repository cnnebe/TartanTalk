<%= render partial: 'layouts/navbar' %>
<% if logged_in? %>
<p id="notice"><%= notice %></p>
<div>
  <!-- Nav tabs -->
  <ul class="nav nav-tabs" role="tablist">
    <li role="presentation" class="active"><a href="#home" aria-controls="home" role="tab" data-toggle="tab">All Counselors</a></li>
    <li role="presentation"><a href="#profile" aria-controls="profile" role="tab" data-toggle="tab">Professional Counselors</a></li>
    <li role="presentation"><a href="#messages" aria-controls="messages" role="tab" data-toggle="tab">Peer Counselors</a></li>
    <li role="presentation"><a href="#settings" aria-controls="settings" role="tab" data-toggle="tab">Counselors Online</a></li>
  </ul>
  <div class="container"> 
  <div class="row centered-form">
  <div class="col-xs-12 col-sm-6 col-md-6 col-sm-offset-3 col-md-offset-3">
  <div class="card card-container">
  <div class="well">

    <!-- Tab panes -->
    <div class="tab-content">
      <div role="tabpanel" class="tab-pane active" id="home">
        <%= render partial: "layouts/index_structure", locals: {staffcollection: @staffs, online: false} %>
      </div>
      <div role="tabpanel" class="tab-pane" id="profile">
        <%= render partial: "layouts/index_structure", locals: {staffcollection: @professionals, online: false} %>
      </div>
      <div role="tabpanel" class="tab-pane" id="messages">
        <%= render partial: "layouts/index_structure", locals: {staffcollection: @peers, online: false} %>
      </div>
      <div role="tabpanel" class="tab-pane" id="settings">
       <%= render partial: "layouts/index_structure", locals: {staffcollection: @staffs, online: true} %>
       <h3> If there is no one here, then that means no one is currently online! </h3>
      </div>
    </div>
<% else %>
  <h1> The page you requested does not exist or may be inaccessible. </h1>
<% end %>
  </div>
  </div>
  </div>
  </div>
  </div>
</div>

<script type="text/javascript">
  $('#myTabs a').click(function (e) {
  e.preventDefault()
  $(this).tab('show')
})
</script>