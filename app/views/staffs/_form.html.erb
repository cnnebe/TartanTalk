<div class="staff-form">
<div class="container"> 
    <div class="row centered-form">
        <div class="col-xs-12 col-sm-6 col-md-6 col-sm-offset-3 col-md-offset-3">
            <div class="card card-container">
            <div class="well">
              <%= simple_form_for @staff, html: { class: 'form-horizontal' } do |f| %>
                <fieldset>
                <legend><%= controller.action_name.capitalize %>Counselor</legend>
                  <%= f.input :bio, as: :text, label: "Biography", hint: "Include interests, availability, any additional contact info you may want to have, and areas of expertise.", input_html: { maxlength: 1000 }  %>
                  <%= f.input :gender, collection: Staff::GENDER, allow_blank: false, input_html: {class: "avg"}, label: "Gender"  %>

                  <% if current_user.role == "admin" %> <!-- Only an admin can set or modify these fields -->
                    <%= f.input :is_professional, as: :boolean,  label: "Professional Counselor?" %>
                    <%= f.input :user_id, collection: User.active.nonstaff, include_blank: false,input_html: {class: "avg"}, label: "Select User to make a Counselor." hint: 'User will automatically be updated to staff role on submission. You cannot add users to staff who are already on staff.' %>
                  <% end %>

                  <div class="form-actions">
                    <%= f.submit 'Make User a Counselor', :class => 'btn btn-primary' %>
                  </div>
                </fieldset>
              <% end %>
            </div>
            </div>
        </div>
    </div>
</div>
</div>

