<%= render partial: 'layouts/flash_errors'%>
<div class="row">
  <div class="small-8 columns">
    <%= simple_form_for @user, html: { class: 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> User</legend>

      <%= f.input :active, as: :boolean, label: "Delete Account" %>

      <%= f.input :role, collection: User::ROLES, input_html: {class: "avg"}  %>



      <div class="form-actions">
        <%= f.submit 'Update Account', :class => 'button radius' %>
        <%= link_to 'Cancel', @user, :class => 'button alert radius' %>
      </div>
      
  </fieldset>
<% end %>

  </div>
</div>
