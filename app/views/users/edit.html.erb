<%= render partial: 'layouts/navbar' %>
<div class="container"> 
    <div class="row centered-form">
        <div class="col-xs-12 col-sm-6 col-md-6 col-sm-offset-3 col-md-offset-3">
            <div class="card card-container">
            <div class="well">
            <% if logged_in? && (current_user.role == 'admin' || current_user.id == @user.id) %>
            	<h3>Update Profile: <%= @user.name %></h3>
            	<%= render 'update_form' %>
            <% else %>
            	<h1> The page you are trying to view is unavailable or does not exist. </h1>
            <% end %>
            </div>
            </div>
        </div>
    </div>
</div>